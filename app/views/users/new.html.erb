<h1>Signup Page</h1>

<%= form_for(@user) do |f|%>
  <%= f.label :username %>
  <%= f.text_field :user_name %>

  <%= f.label :password %>
  <%= f.password_field :password %>

  <%= f.label :email %>
  <%= f.email_field :email %>

  <%= f.label :first_name %>
  <%= f.text_field :first_name %>

  <%= f.label :last_name %>
  <%= f.text_field :last_name %>

  <%= f.label :affected_person %>
  <%= f.text_field :affected_person %>

  <%= f.label :location %>
  <%= f.text_field :location %>

  <%= f.label :email %>
  <%= f.email_field :email %>

  <%= f.label :password %>
  <%= f.password_field :password %>

  <%= f.submit "Sign Up" %>

<% end %>
