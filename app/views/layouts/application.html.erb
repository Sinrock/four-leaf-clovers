<!DOCTYPE html>
<html>
  <head>
    <title>Four Leaf Clovers</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>

    <div>
      <% #if logged_in? %>
      <%= link_to "Create a Post", new_post_path %> |
      <%= link_to "View All Posts", posts_path %> |
      <%= link_to "View Comments", comments_path %> |
      <%= link_to "Browse a Topic", topics_path %> |
      <%= link_to "Create a Topic", new_topic_path %> |
      <%= link_to "Log Out", logout_path, method: "delete" %>
      <% #else %>
      <%= link_to "Sign Up", signup_path %> |
      <%= link_to "Login", login_path %>
      <%= link_to "Sign in with Google", user_google_oauth2_omniauth_authorize_path, method: :post %>
      <% #end %>
    
    </div>
    <% if flash[:error] %>
      <%= flash[:error] %>
      <p class="notice"><%= notice %></p>
      <p class="alert"><%= alert %></p>
      <% end %>
    <div>

    </div>
    <%= yield %>
  </body>
</html>
